%h1= @client.name
= bootstrap_form_for(Timelog.new, url: client_timelogs_path(@client), layout: :horizontal) do |f|
  = f.select :client_profile_id, @client_profiles.map {|cp| [cp.name, cp.id] }
  = f.date_field :date, value: Time.now.strftime('%d-%m-%Y')
  = f.number_field :hours, step: "any"
  = f.time_field :begin_time
  = f.time_field :end_time
  = f.text_field :description
  = f.submit "Add Hours"
